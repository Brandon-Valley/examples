#--------------------------------------------------------------------------------------------------#
# Standard print for minor section headers
#--------------------------------------------------------------------------------------------------#
proc print_minor_section_header {out_str} {
    puts "\n        < ====================================================== >"
    puts   "            $out_str"
    puts   "        < ====================================================== >\n"
}

#--------------------------------------------------------------------------------------------------#
# Standard print errors
#--------------------------------------------------------------------------------------------------#
proc print_error {out_str} {
    puts "\n\n< !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! >"
    puts     "ERROR:"
    puts     "\n$out_str"
    puts     "< !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! >\n\n"
}

#--------------------------------------------------------------------------------------------------#
# Standard print warnings
#--------------------------------------------------------------------------------------------------#
proc print_warning {out_str} {
    puts "\n\n< *********************************************************************************** >"
    puts     "WARNING:"
    puts     "\n$out_str"
    puts     "< *********************************************************************************** >\n\n"
}

#--------------------------------------------------------------------------------------------------#
# Standard print for generic messages
#--------------------------------------------------------------------------------------------------#
proc print_std {out_str} {
    puts "\n            --  $out_str\n"
}

#--------------------------------------------------------------------------------------------------#
# Prints lists nicely for testing
#--------------------------------------------------------------------------------------------------#
proc puts_list {in_list} {
    puts "{"
    foreach ele $in_list {
        puts "  $ele"
    }
    puts "}"
}
